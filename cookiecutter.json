{
  "full_name": "Nicholas Corbin",
  "email": "nickcorbin17@yahoo.com",
  "pypi_package_name": "python-boilerplate",
  "python_version": "3.13",
  "project_name": "{{ cookiecutter.pypi_package_name.replace('-', ' ').replace('_', ' ') | title }}",
  "project_slug": "{{ cookiecutter.pypi_package_name.replace('-', '_').replace(' ', '_') | lower }}",
  "project_short_description": "...",
  "first_version": "0.1.0",
  "create_github_repo": ["yes", "no"],
  "__prompts__": {
    "full_name": "Your full name",
    "email": "Your email address",
    "pypi_package_name": "PyPI package name",
    "python_version": "Python version",
    "project_name": "Project name",
    "project_slug": "Project slug (used for directory and module names)",
    "project_short_description": "Short project description",
    "first_version": "Initial version",
    "create_github_repo": "Create a GitHub repository?"
  },
  "__debug": "{{ cookiecutter.pypi_package_name == 'python-boilerplate' }}",
  "__project_dir": "{% set Path = import('pathlib').Path %}{{ Path(Env('PROJECT_DIR').value) if not cookiecutter.__debug else Path(Env('COOKIECUTTER_CONFIG').value).parent / 'cookiecutter-pypackage' }}",
  "__gh_slug": "iLiftALot/{{ cookiecutter.project_slug.replace('_', '-') }}",
  "__extra_test": "{% set Path = import('pathlib').Path %}{{ Path.cwd().relative_to(cookiecutter.__project_dir) }}",
  "_extensions": [
    "src.cookiecutter_pypackage.scripts.jinja2_extensions.pylibrary.PyLibraryExtension"
  ]
}
